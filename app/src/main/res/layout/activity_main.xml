<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="br.com.fatecpg.mygrades.MainActivity"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <br.com.fatecpg.mygrades.AutoHideKeyboardEditText
            android:id="@+id/editNewDisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nome da Disciplina"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserir"
            android:id="@+id/btnAddButton"
            android:layout_alignParentRight="true"
            android:onClick="inserir"/>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISCIPLINAS"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/optionsListView">

    </ListView>

</LinearLayout>
